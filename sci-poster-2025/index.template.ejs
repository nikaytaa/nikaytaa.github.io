<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="./style.css" rel="stylesheet">
    <script async src="https://www.instagram.com/embed.js" crossorigin></script>
</head>

<body class="bg-stone-50 text-stone-900 p-1">
    <div class="container mx-auto max-w-screen-xl">
        <div class="bg-yellow-400 p-8 rounded-2xl shadow-md mb-4">
            <h1 class="text-5xl font-bold mb-4 tracking-tight text-balance">
                <%= heading %>
            </h1>
            <p class="text-xl text-pretty mb-2">
                <%= desc_prefix %> <strong>
                        <%= poster_title %>
                    </strong>
            </p>
            <% blurbs.forEach(blurb=> { %>
                <p class="text-xl text-pretty mb-2">
                    <%= blurb %>
                </p>
                <% }); %>
        </div>
        <% content.forEach((c, i)=> { %>
            <div id="<%= i + 1 %>"
                class="bg-stone-100 overflow-hidden rounded-2xl shadow-md mb-4 border-2 border-stone-900">
                <div class="bg-teal-400 p-4 text-4xl font-bold tracking-tight border-b-2 border-stone-900">#<%= i + 1 %>
                </div>
                <div class="flex flex-col md:flex-row">
                    <div class="md:w-1/2 p-4 flex items-center justify-center">
                        <blockquote class="instagram-media max-w-[540px] min-w-[326px] w-full" data-instgrm-captioned
                            data-instgrm-permalink="<%= c.link %>" data-instgrm-version="14">
                        </blockquote>
                    </div>
                    <div class="md:w-1/2 p-4 text-xl md:text-2xl text-pretty">
                        <% if (c.poster) { %>
                            <button type="button"
                                class="bg-stone-50 text-stone-900 border border-stone-200 font-medium rounded-sm text-lg px-5 py-2.5 text-center inline-flex items-center mt-2 mb-4 gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
                                  </svg>                                  
                                Featured on the Poster
                            </button>
                            <% } %>
                        <p>
                            <%- c.commentary %>
                        </p>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</body>

</html>