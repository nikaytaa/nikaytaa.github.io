<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./style.css" rel="stylesheet">
    <script async src="https://www.instagram.com/embed.js"></script>
</head>

<body class="bg-stone-50 text-stone-900 p-1">
    <div class="container mx-auto max-w-screen-xl">
        <div class="bg-yellow-400 p-8 rounded-2xl shadow-md mb-4">
            <h1 class="text-5xl font-bold mb-4 tracking-tight text-balance">
                <%- heading %>
            </h1>
            <% blurbs.forEach(blurb => { %>
                <p class="text-xl text-pretty mb-2">
                    <%= blurb %>
                </p>
            <% }); %>
        </div>
        <% content.forEach((c, i) => { %>
            <div class="bg-stone-100 overflow-hidden rounded-2xl shadow-md mb-4 border-2 border-stone-900">
                <div class="bg-teal-400 p-4 text-4xl font-bold tracking-tight border-b-2 border-stone-900">#<%= i + 1 %></div>
                <div class="flex flex-col md:flex-row">
                    <div class="md:w-1/2 p-4 flex items-center justify-center">
                        <blockquote class="instagram-media max-w-[540px] min-w-[326px] w-full" data-instgrm-captioned
                            data-instgrm-permalink="<%= c.link %>"
                            data-instgrm-version="14">
                        </blockquote>
                    </div>
                    <div class="md:w-1/2 p-4 text-xl md:text-2xl text-pretty">
                        <p>
                            <%= c.commentary %>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</body>

</html>